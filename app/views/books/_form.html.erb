<%= form_for @book, html: { class: "mt-5" } do |f| %>
  <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">以下のエラーがあります：</h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "著書名", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author, "著者", class: "form-label" %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :publisher, "出版社", class: "form-label" %>
    <%= f.text_field :publisher, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :review, "書評", class: "form-label" %>
    <%= f.text_area :review, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿", class: "btn btn-primary" %>
  </div>
<% end %>