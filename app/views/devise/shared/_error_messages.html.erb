
<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(resource.errors.count, "error") %> prevented this <%= resource.class.model_name.human.downcase %> from being saved:</h2>
    <ul>
      <% [:username, :email, :password, :password_confirmation].each do |field| %>
        <% if resource.errors[field].any? %>
          <% resource.errors.full_messages_for(field).each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>